<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.runatstart.PrimaryController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="View">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#RefreshLists" text="Refresh" />
               </items>
            </Menu>
        <Menu disable="true" mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About RunAtStart" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <SplitPane dividerPositions="0.5" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <items>
            <ScrollPane prefHeight="551.0" prefWidth="376.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                  <Label alignment="CENTER" layoutX="152.0" layoutY="14.0" minWidth="60.0" prefHeight="27.0" prefWidth="131.0" style="&#10;" text="Applications" textAlignment="CENTER" wrapText="false">
                    <font>
                      <Font size="18.0" fx:id="x1" />
                    </font>
                    <textFill>
                      <Color red="0.624" green="0.624" blue="0.624" fx:id="x2" />
                    </textFill>
                  </Label>
                        <ListView fx:id="allItems" layoutX="14.0" layoutY="42.0" prefHeight="505.0" prefWidth="420.0" />
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
               <content>
            <AnchorPane id="Content" minHeight="-1.0" minWidth="-1.0" prefHeight="549.0" prefWidth="446.0">
              <children>
                <Label alignment="CENTER" font="$x1" layoutX="155.0" layoutY="11.0" prefHeight="31.0" prefWidth="135.0" style="&#10;" text="Run at start" textAlignment="CENTER" textFill="$x2" wrapText="false" />
                        <ListView fx:id="startItems" layoutX="14.0" layoutY="42.0" prefHeight="505.0" prefWidth="420.0" />
                        <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#AddStartItem" text="Add from explorer" />
              </children>
            </AnchorPane>
               </content>
            </ScrollPane>
      </items>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" prefWidth="905.0" spacing="5.0" VBox.vgrow="NEVER">
      <children>
        <Label fx:id="allItemsAmount" maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="X Items" HBox.hgrow="ALWAYS">
          <font>
            <Font size="11.0" fx:id="x3" />
          </font>
          <textFill>
            <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
          </textFill>
        </Label>
        <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
        <Label fx:id="startItemsAmount" font="$x3" maxWidth="-1.0" text="Y Items" textFill="$x4" HBox.hgrow="NEVER" />
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
